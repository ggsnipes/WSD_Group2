@{
    ViewData["Title"] = "Home Page";
}

<style>
    img {
        width: 100%;
        height: auto;
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/bar_1.jpg" alt="Hotel Bar" class="img-responsive">
            <div class="carousel-caption" role="option">
                <h3>Hotel Bar</h3>
            </div>
        </div>

        <div class="item">
            <img src="~/images/Hotel_bld.jpg" alt="WSH" class="img-responsive">
            <div class="carousel-caption" role="option">
                <h3>Western Sydney Hotel</h3>
            </div>
        </div>

        <div class="item">
            <img src="~/images/Hotel_loby .jpg" alt="Hotel loby" class="img-responsive">
            <div class="carousel-caption" role="option">
                <h3>Hotel Loby</h3>
            </div>
        </div>

        <div class="item">
            <img src="~/images/Room_1.jpg" alt="Rooms" class="img-responsive">
            <div class="carousel-caption" role="option">
                <h3>Room Available</h3>
            </div>
        </div>

        <div class="item">
            <img src="~/images/Room_2.jpg" alt="Rooms" class="img-responsive">
            <div class="carousel-caption" role="option">
                <h3>Room Available</h3>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-sm-8">
        <h2>Welcome to Western Sydney Hotel site</h2>
    </div>
    <div class="col-sm-4">
        <h2>Useful Links</h2>
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Parramatta/Penrith/Campbelltown Weather</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="About">Parramatta/Penrith/Cambelltown city councel</a></li>
        </ul>
    </div>
</div>